<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bwie.vidio">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".modle.app.ImgApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
        <activity android:name=".modle.view.activity.FlashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".modle.view.activity.MainActivity" />
        <activity android:name=".modle.view.activity.LoginActivity" />
        <activity android:name=".modle.view.activity.GongNengSlidingMenu" />
        <activity android:name=".modle.view.activity.GuanYuSlidingMenu" />
        <activity android:name=".modle.view.activity.PlayActivity"></activity>
    </application>

</manifest>